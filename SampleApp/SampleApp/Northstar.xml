<NorthstarExampleViewController
    outlet="layoutNode"
    backgroundColor="#fff">

    <UIScrollView
        contentInset.bottom="20 + bottomLayoutGuide.length"
        scrollIndicatorInsets.bottom="bottomLayoutGuide.length"
        keyboardDismissMode="onDrag">
        <UIControl touchUpInside="dismissKeyboard">
            <Northstar.NorthstarLabel
                text="{strings.signup.title}"
                textStyle="heading1"
                left="16"
                right="100% - 16"
                top="32"
            />
            <Northstar.NorthstarLabel
                text="{strings.signup.email_label}"
                textStyle="body"
                left="16"
                right="100% - 16"
                top="previous.bottom + 24"
            />
            <Northstar.NorthstarTextField
                outlet="numberField"
                placeholder="{strings.signup.email_placeholder}"
                left="16"
                right="100% - 16"
                top="previous.bottom + 8"
            />
            <Northstar.NorthstarLabel
                text="{error}"
                textStyle="bodyError"
                left="16"
                right="100% - 16"
                height="max(auto, 25)"
                numberOfLines="0"
                top="previous.bottom + 4"
                isHidden="hideError"
                alpha="hideError ? 0 : 1"
            />
            <Northstar.NorthstarLabel
                text="{strings.signup.email_description}"
                textStyle="bodySoft"
                numberOfLines="0"
                left="16"
                right="100% - 16"
                top="previous.bottom + 24"
            />
            <Northstar.NorthstarCheckboxControl
                outlet="termsCheckbox"
                text="{strings.signup.terms_checkbox}"
                left="16"
                right="100% - 16"
                top="previous.bottom + 4"
            />
            <Northstar.NorthstarCheckboxControl
                outlet="privacyCheckbox"
                text="{strings.signup.privacy_checkbox}"
                left="16"
                right="100% - 16"
                top="previous.bottom"
            />
            <Northstar.NorthstarClickableLabel
                text="{strings.signup.terms_label}"
                left="16"
                right="100% - 16"
                top="previous.bottom"
            />
            <Northstar.NorthstarSubmitInputView
                width="100%"
                title="{strings.signup.submit_button}"
                isPrimary="true"
                isEnabled="true"
                top="previous.bottom"
                touchUpInside="submit"
            />
        </UIControl>
    </UIScrollView>
</NorthstarExampleViewController>
