<PagesViewController
    backgroundColor="#ddd">

    <UIScrollView
        outlet="scrollView"
        isPagingEnabled="true"
        contentInset.bottom="bottomLayoutGuide.length"
        showsHorizontalScrollIndicator="false">
        <UIView
            width="300%"
            height="100% - parent.contentInset.bottom">

            <!-- Page 1 -->
            <UIView
                top="max(topLayoutGuide.length + 10, 20)"
                left="20"
                width="(100/3)% - 40"
                bottom="100% - 20"
                layer.cornerRadius="10"
                backgroundColor="#f33">
                <UILabel
                    width="100%"
                    height="100%"
                    textAlignment="center"
                    text="Page 1"
                    textColor="#fff"
                    font="30 bold"
                />
            </UIView>

            <!-- Page 2 -->
            <UIView
                top="previous.top"
                left="previous.right + 40"
                width="previous.width"
                bottom="previous.bottom"
                layer.cornerRadius="previous.layer.cornerRadius"
                backgroundColor="#3a3">
                <UILabel
                    width="100%"
                    height="100%"
                    textAlignment="center"
                    text="Page 2"
                    textColor="#fff"
                    font="30 bold"
                />
            </UIView>

            <!-- Page 3 -->
            <UIView
                top="previous.top"
                left="previous.right + 40"
                width="previous.width"
                bottom="previous.bottom"
                layer.cornerRadius="previous.layer.cornerRadius"
                backgroundColor="#09f">
                <UILabel
                    width="100%"
                    height="100%"
                    textAlignment="center"
                    text="Page 3"
                    textColor="#fff"
                    font="30 bold"
                />
            </UIView>

        </UIView>
    </UIScrollView>
    <UIPageControl
        outlet="pageControl"
        bottom="100% - bottomLayoutGuide.length - 30"
        isUserInteractionEnabled="false"
        numberOfPages="3"
    />
</PagesViewController>
