<PagesViewController backgroundColor="#ddd">
    <UIScrollView
        contentInset.bottom="bottomLayoutGuide.length"
        contentInset.top="max(topLayoutGuide.length + 10, 20)"
        contentSize.height="100% - contentInset.top - contentInset.bottom"
        contentSize.width="300%"
        isPagingEnabled="true"
        outlet="scrollView"
        showsHorizontalScrollIndicator="false">

        <!-- Page 1 -->
        <UIView
            backgroundColor="#f33"
            height="parent.contentSize.height - 20"
            layer.cornerRadius="10"
            left="20"
            top="0"
            width="100% - 40">

            <UILabel
                font="30 bold"
                height="100%"
                text="Page 1"
                textAlignment="center"
                textColor="#fff"
                width="100%"
            />
        </UIView>

        <!-- Page 2 -->
        <UIView
            backgroundColor="#3a3"
            height="previous.height"
            layer.cornerRadius="previous.layer.cornerRadius"
            left="previous.right + 40"
            top="previous.top"
            width="previous.width">

            <UILabel
                font="30 bold"
                height="100%"
                text="Page 2"
                textAlignment="center"
                textColor="#fff"
                width="100%"
            />
        </UIView>

        <!-- Page 3 -->
        <UIView
            backgroundColor="#09f"
            height="previous.height"
            layer.cornerRadius="previous.layer.cornerRadius"
            left="previous.right + 40"
            top="previous.top"
            width="previous.width">

            <UILabel
                font="30 bold"
                height="100%"
                text="Page 3"
                textAlignment="center"
                textColor="#fff"
                width="100%"
            />
        </UIView>
    </UIScrollView>
    <UIPageControl
        bottom="100% - bottomLayoutGuide.length - 40"
        isUserInteractionEnabled="false"
        left="50% - (width / 2)"
        numberOfPages="3"
        outlet="pageControl"
    />
</PagesViewController>
